<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/back2"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="85dp"
        android:layout_height="88dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        app:srcCompat="@drawable/logo7" />

    <TextView
        android:id="@+id/pain_tital"
        android:layout_width="223dp"
        android:layout_height="67dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imageView"
        android:paddingTop="16dp"
        android:text="PAIN DATA ENTRY"
        android:textColor="@color/purple_700"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/pain_level"
        android:layout_width="147dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"
        android:paddingTop="16dp"
        android:text="Pain intensity level :"
        android:textColor="@color/black" />

    <com.google.android.material.slider.Slider
        android:id="@+id/slider"
        android:layout_width="267dp"
        android:layout_height="35dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="120dp"
        android:layout_toRightOf="@+id/pain_level"
        android:labelFor="@id/pain_level"
        android:stepSize="1"
        android:value="5.0"
        android:valueFrom="0.0"
        android:valueTo="10.0" />

    <TextView
        android:id="@+id/location_pain"
        android:layout_width="147dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:paddingTop="15dp"
        android:layout_below="@id/pain_level"
        android:text="Location of pain :"
        android:textColor="@color/black" />

    <Spinner
        android:id="@+id/spin_location"
        android:layout_width="147dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:layout_below="@id/slider"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:paddingTop="16dp"
        android:layout_toRightOf="@+id/location_pain"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/mood"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:paddingTop="10dp"
        android:layout_below="@id/location_pain"
        android:text="Mood : (Select below)"
        android:textColor="@color/black" />

    <com.hsalf.smileyrating.SmileyRating
        android:id="@+id/mood_level"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:showLine="true"
        android:paddingTop="10dp"
        android:layout_below="@id/mood"
        android:orientation="horizontal"
        >
    </com.hsalf.smileyrating.SmileyRating>

    <TextView
        android:id="@+id/step_goal"
        android:layout_width="120dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:paddingTop="18dp"
        android:layout_below="@+id/mood_level"
        android:text="Steps goal :"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/et_step_goal"
        android:layout_width="170dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:paddingTop="10dp"
        android:layout_toRightOf="@+id/step_goal"
        android:layout_below="@+id/mood_level"
        android:text="10000"
        android:inputType="number"
        android:textSize="15dp"
        android:enabled="false"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/step_taken"
        android:layout_width="120dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:paddingTop="15dp"
        android:layout_below="@+id/step_goal"
        android:text="Steps taken :"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/et_step_taken"
        android:layout_width="170dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:paddingTop="10dp"
        android:layout_toRightOf="@+id/step_taken"
        android:layout_below="@+id/et_step_goal"
        android:hint="Input number"
        android:inputType="number"
        android:textSize="15dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_timeset"
        android:layout_width="120dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:paddingTop="15dp"
        android:layout_below="@+id/step_taken"
        android:text="Time setting :"
        android:textColor="@color/black" />

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_below="@+id/step_taken"
        android:layout_toRightOf="@+id/tv_timeset"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:timePickerMode="spinner"/>

    <Button
        android:id="@+id/b_save"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="85dp"
        android:layout_below="@+id/step_taken"
        android:backgroundTint="#E91E63"
        android:text="Save"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textview_content"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@+id/b_save"
        android:layout_marginLeft="18dp"
        android:layout_gravity="center"
        android:paddingTop="1dp"
        android:text=""
        android:textColor="@color/black" />

    <Button
        android:id="@+id/b_edit"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="85dp"
        android:layout_below="@+id/et_step_taken"
        android:layout_toRightOf="@+id/b_save"
        android:backgroundTint="#E91E63"
        android:text="Edit"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_delete_all"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@+id/step_taken"
        android:layout_gravity="center"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="130dp"
        android:backgroundTint="#E91E63"
        android:text="DeleteAll"
        android:textSize="13sp"
        android:visibility="visible"
        />



</RelativeLayout>
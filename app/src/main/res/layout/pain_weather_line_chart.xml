<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/back2"
    tools:context=".MainActivity"
    android:id="@+id/pain_weather_layout"
    >


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="85dp"
            android:layout_height="88dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            app:srcCompat="@drawable/logo7" />

        <TextView
            android:id="@+id/pain_tital"
            android:layout_width="223dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/imageView"
            android:paddingTop="16dp"
            android:text="PAIN AND WEATHER LINE CHART"
            android:textColor="@color/purple_700"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_start_date"
            android:layout_width="147dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="20dp"
            android:paddingTop="16dp"
            android:text="Start Date :"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/et_start_date"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/pain_tital"
            android:layout_toRightOf="@+id/tv_start_date"
            android:ems="10"
            android:hint="YYYYMMDD"
            android:inputType="date"
            android:focusable="false"/>


        <TextView
            android:id="@+id/tv_end_date"
            android:layout_width="147dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="20dp"
            android:paddingTop="15dp"
            android:layout_below="@+id/tv_start_date"
            android:text="End Date :"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/et_end_date"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/et_start_date"
            android:layout_toRightOf="@+id/tv_end_date"
            android:ems="10"
            android:hint="YYYYMMDD"
            android:inputType="date"
            android:focusable="false"/>

        <TextView
            android:id="@+id/weather_variable"
            android:layout_width="150dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:paddingTop="10dp"
            android:layout_below="@+id/tv_end_date"
            android:text="Weather variable :"
            android:textColor="@color/black" />

        <Spinner
            android:id="@+id/s_weather_variable"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_below="@+id/et_end_date"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/weather_variable"
            android:paddingTop="0dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/b_confirm"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_below="@+id/weather_variable"
            android:layout_marginLeft="50dp"
            android:text="Confirm"
            android:backgroundTint="#E91E63"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/b_test"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_below="@+id/weather_variable"
            android:layout_toRightOf="@+id/b_confirm"
            android:layout_marginLeft="70dp"
            android:text="correlation"
            android:backgroundTint="#E91E63"
            android:layout_marginBottom="10dp"/>


        <com.anychart.AnyChartView
            android:id="@+id/any_chart_view"
            android:layout_width="match_parent"
            android:layout_height="410dp"
            android:layout_marginTop="320dp"/>


<!--        <RelativeLayout-->
<!--            android:id="@+id/any_chart_view_container"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="410dp"-->
<!--            android:layout_marginTop="320dp"></RelativeLayout>-->

        <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="37dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="500dp"
        android:layout_gravity="center_horizontal"/>

</RelativeLayout>




